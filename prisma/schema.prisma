generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int         @id @default(autoincrement())
  email      String?     @unique(map: "email") @db.VarChar(150)
  password   String?     @db.VarChar(255)
  name       String?     @db.VarChar(150)
  avatar     String?     @db.VarChar(255)
  role       users_role? @default(client)
  verified   Boolean?    @default(false)
  created_at DateTime    @default(now()) @db.Timestamp(0)
  events     events[]
  bookings   bookings[]
  followers  follows[]   @relation("Follower")
  following  follows[]   @relation("Following")
}

model events {
  id           Int            @id @default(autoincrement())
  title        String?        @db.VarChar(200)
  description  String?        @db.Text
  location     String?        @db.VarChar(150)
  event_date   DateTime?      @db.DateTime(0)
  organizer_id Int?
  image        String?        @db.VarChar(255)
  category     event_category?
  views        Int?           @default(0)
  likes        Int?           @default(0)
  verified     Boolean?       @default(false)
  created_at   DateTime       @default(now()) @db.Timestamp(0)
  organizer    users?         @relation(fields: [organizer_id], references: [id], onDelete: Restrict, onUpdate: Restrict, map: "events_ibfk_1")
  tickets      tickets[]

  @@index([organizer_id], map: "organizer_id")
  @@index([category], map: "category")
  @@index([verified], map: "verified")
}

model tickets {
  id       Int       @id @default(autoincrement())
  event_id Int?
  name     String?   @db.VarChar(100)
  price    Int?
  quantity Int?
  event    events?   @relation(fields: [event_id], references: [id], onDelete: Restrict, onUpdate: Restrict, map: "tickets_ibfk_1")
  bookings bookings[]

  @@index([event_id], map: "event_id")
}

model bookings {
  id         Int       @id @default(autoincrement())
  user_id    Int?
  ticket_id  Int?
  quantity   Int?      @default(1)
  created_at DateTime  @default(now()) @db.Timestamp(0)
  user       users?    @relation(fields: [user_id], references: [id], onDelete: Restrict, onUpdate: Restrict, map: "bookings_ibfk_1")
  ticket     tickets?  @relation(fields: [ticket_id], references: [id], onDelete: Restrict, onUpdate: Restrict, map: "bookings_ibfk_2")

  @@index([user_id], map: "user_id")
  @@index([ticket_id], map: "ticket_id")
}

model follows {
  id          Int      @id @default(autoincrement())
  follower_id Int?
  following_id Int?
  created_at  DateTime @default(now()) @db.Timestamp(0)
  follower    users?   @relation("Follower", fields: [follower_id], references: [id], onDelete: Restrict, onUpdate: Restrict, map: "follows_ibfk_1")
  following   users?   @relation("Following", fields: [following_id], references: [id], onDelete: Restrict, onUpdate: Restrict, map: "follows_ibfk_2")

  @@unique([follower_id, following_id], map: "follower_following_unique")
  @@index([follower_id], map: "follower_id")
  @@index([following_id], map: "following_id")
}

enum users_role {
  admin
  organisateur
  client
}

enum event_category {
  concert
  culture
  conference
  sport
  formation
  festival
  autre
}
